.container
  h1.admin-header Пользователи
  .card
    table.admin-table
      thead
        td Email
        td Имя
        td Телефон
        td Права
      tbody
      - @users.each do |u|
        tr.item
          td = link_to u.email, edit_admin_user_path(u)
          td = u.full_name
          td = u.normalized_phone
          td = u.role

  = will_paginate @users
